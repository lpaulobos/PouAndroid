<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:minHeight="255dp"
        android:minWidth="255dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll1"
        android:layout_marginTop="10dp"
        android:id="@+id/ll2"             >


        <ImageView
            android:layout_width="84dp"
            android:layout_height="76dp"
            android:id="@+id/imageView2"
            android:src="@drawable/bottle" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:minHeight="76dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll2"
        android:layout_marginTop="10dp"
        android:id="@+id/ll3"             >


        <ImageView
            android:layout_width="84dp"
            android:layout_height="76dp"
            android:id="@+id/imageView3"
            android:src="@drawable/hotdog" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:minHeight="76dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll1"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Drink Some Water"
            android:background="#51c696"
            android:id="@+id/button"
            android:clickable="true"
            android:onClick="waterPlease"
            android:textColor="#036915" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Eat Some Food"
            android:background="#51c696"
            android:id="@+id/button2"
            android:onClick="foodPlease"
            android:textColor="#036915" />
    </LinearLayout>

</RelativeLayout>
